<h1>
  Hackathon Contributors
</h1>

<% @contributors.each do |contributor| %>
  <div class="card mb-3">
    <div class="card-body">
        <%= link_to "https://github.com/#{contributor.github_username}", target: :_blank, class: 'float-left mr-3' do %>
          <img src="https://github.com/<%= contributor.github_username %>.png" class="rounded" height='40' width='40'>
        <% end %>
      <h5 class="card-title mb-0">
        <%= link_to contributor, contributor_path(contributor.github_username), target: :_blank %>
      </h5>

      <small class='text-muted'>
        <% repo_names = contributor.contributed_repository_names %>
        Repos: <%= repo_names.first(4).join(', ') %>
        <% if repo_names.length > 4 %>
          and <%= repo_names.length %> more
        <% end %>
      </small>
    </div>
  </div>

<% end %>
<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
